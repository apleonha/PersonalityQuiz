//This method allow the user to start the quiz.
public void startTest() {
TakeTest test = new TakeTest();         

test.startQuiz();
}

//This allows the user to exit the program.
public void exitProgram() {
System.out.println("Goodbye! Thank you for taking the Enneagram Personality Quiz.");         

System.exit(0);
}

class TakeTest {     
	Scanner scanner = new Scanner(System.in); 

int questionIndex = 0;

String[] questions = {"what is your favorite color?", "What is your favorite animal?'};

String[] answers = new String[questions.length];

//This method displays the current question the user is on.
public void displayQuestion() {         

System.out.println("Question " + (questionIndex + 1) + ": " + questions[questionIndex]);     
}

public void startQuiz() {

while
	(questionIndex < questions.length) {

		displayQuestion();
				getAnswer();

questionIndex++;
}

calculateResult();
	displayResult();
}

//This method is used to get the users answer to the current question.
public string getAnswer() {
System.out.print("Enter your answer: ");         
	
	String answer = scanner.nextLine();

	validateAnswer(answer);

	storeAnswer(answer);
}

